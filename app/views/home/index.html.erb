<div class="top-wrapper">
  <div class="top-title-object">
    <h1 class="top-title flex">FLUFF MAPS<%= image_tag 'top_animal_icon.png', size: '80', class: 'mx-3' %></h1>
    <h2 class="top-message">動物とふれあえる施設を検索できるサービスです</h2>
  </div>
</div>
<div class="top-wrapper-animal">
  <div>
    <%= render 'shared/search_form' %>
  </div>
</div>
<div>
  <div class="flex mx-auto justify-center align-center animal-search-form">
    <%= render 'shared/animal_search' %>
  </div>
</div>
<div class="flex">
  <div>
    <% if logged_in? %>
      <% current_user.suggest_to_login_user(current_user).each do |facility| %>
        <%= render 'facilities/facility', facility: facility %>
      <% end %>
    <% else %>
      <% @facilities.each do |facility| %>
        <%= render 'facilities/facility', facility: facility %>
      <% end %>
    <% end %>
  </div>
  <div>
    <%= render 'shared/posts', posts: @posts %>
  </div>
</div>