<div class="w-full h-screen font-sans bg-cover bg-landscape">
  <div class="container flex items-center justify-center flex-1 h-full mx-auto">
    <div class="w-full max-w-lg">
      <div class="leading-loose text-center">
        <%= form_with model: @user, url: password_reset_path(@token), class: 'max-w-sm p-10 m-auto bg-white bg-opacity-25 rounded shadow-xl', local: true do |f| %>
          <%= render 'shared/error_messages', object: f.object %>
          <p class="mb-8 text-3xl font-light text-black">
            <%= t('.title') %>
          </p>
          <div class="mb-4 flex-1">
            <div class="pt-5 pb-3">
              <%= f.label :email %>
            </div>
            <%= @user.email %>
          </div>
          <div class="mb-4 flex-1">
            <div class="pt-5 pb-3">
              <%= f.label :password %>
            </div>
            <%= f.password_field :password, class: 'input input-bordered input-info w-full max-w-xs' %>
          </div>
          <div class="mb-4 flex-1">
            <div class="pt-5 pb-3">
              <%= f.label :password_confirmation %>
            </div>
            <%= f.password_field :password_confirmation, class: 'input input-bordered input-info w-full max-w-xs' %>
          </div>
          <div class="flex items-center justify-between mt-4">
            <%= f.submit class: 'cursor-pointer py-2 px-4  bg-indigo-600 hover:bg-indigo-700 focus:ring-indigo-500 focus:ring-offset-indigo-200 text-white w-full transition ease-in duration-200 text-center text-base font-semibold shadow-md focus:outline-none focus:ring-2 focus:ring-offset-2  rounded-lg' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
