<label for="my-modal-4" class="btn modal-button">動物の種類から検索</label>
<input type="checkbox" id="my-modal-4" class="modal-toggle" />
<label for="my-modal-4" class="modal cursor-pointer">
  <label class="modal-box relative" for="">
    <h3 class="text-lg font-bold">動物の種類と都道府県を選択して検索できます</h3>
    <div class="w-full">
      <div class="relative">
        <div class="flex">
          <%= form_with model: @search_facility_form, scope: :q, url: facilities_path, method: :get do |f| %>
            <div class="mb-1">
              <%= f.select :animal_id, Animal.pluck(:name, :id), { include_blank: '動物を選択' }, class: 'select select-info' %>
              <%= f.select :prefecture_id, Prefecture.pluck(:name, :id), { include_blank: '都道府県' }, class: 'select select-info' %>
            </div>
            <div class="mb-1 input input-bordered input-info">
              <%= f.search_field :name, placeholder: '地名 施設名 キーワード' %>
            </div>
            <div class="text-center ">
              <%= f.submit '検索', class: 'btn btn-sm btn-outline btn-info bg-gray-50 ' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </label>
</label>
