<div class="card card-side bg-facility-card shadow-xl !mb-4">
  <div class="card-body">
    <div class="flex">
        <%= link_to facility_path(facility) do %>
          <div class="mr-2 sm:text-2xl btn-ghost"><b><h2><%= facility.name %></h2></b></div>
        <% end %>
      <div>
        <% facility.categories.each do |category| %>
          <h3 class="whitespace-nowrap badge badge-outline text-xs sm:text-base sm:m-2"><%= category.name %></h3>
        <% end %>
      </div>
    </div>
    <p class="flex text-xs sm:text-sm text-gray-600"><%= facility.address %></p>
    <div class="flex mt-1">
      <figure><span class="facility-image"><%= facility_image(facility) %></span></figure>
      <div>
        <b class="text-sm sm:text-base flex ml-2 mb-2"><h2>ふれあえる動物</h2></b>
        <div class="animals-name ml-2 my-2">
          <% facility.animals.each do |animal| %>
            <div class="animal-name my-1 ml-2">
              <%= image_tag animal.icon, size: '40' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="flex justify-end">
      <div class="flex">
        <%= render 'shared/bookmark_button', facility: facility, class: 'whitespace-nowrap' %>
        <%= link_to facility_path(facility), data: { 'turbolinks': false } do %>
          <button class="btn whitespace-nowrap ml-3 twitter-button">詳細を見る</button>
        <% end %>
      </div>
    </div>
  </div>
</div>