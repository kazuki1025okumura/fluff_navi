<div class="card card-side bg-base-100 shadow-xl">
  <div class="card-body">
    <div class="flex">
      <h2 class="mr-2"><b><%= facility.name %></b></h2>
      <div>
        <% facility.categories.each do |category| %>
          <p class="whitespace-nowrap badge badge-outline text-xs"><%= category.name %></p>
        <% end %>
      </div>
    </div>
    <p class="flex text-xs text-gray-600"><%= facility.address %></p>

    <div class="flex mt-1">
      <figure><span class="facility-image"><%= facility_image(facility) %></span></figure>
      <div>
        <b class="text-sm">ふれあえる動物</b>
        <div class="animals-name">
          <% facility.animals.each do |animal| %>
            <div class="animal-name my-2">
              <%= image_tag animal.icon, size: '40' %>
            </div>
          <% end %>
        </div>
        <div class="flex">
          <%= render 'shared/bookmark_button', facility: facility, class: 'whitespace-nowrap' %>
          <%= link_to facility_path(facility), data: { 'turbolinks': false } do %>
            <button class="btn btn-primary whitespace-nowrap  ml-3">詳細を見る</button>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>